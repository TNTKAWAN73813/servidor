{
  "name": "API Minecraft",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.11",
  "forwardPorts": [8080],
  "portsAttributes": {
    "8080": {
      "label": "API-NLS",
      "onAutoForward": "openPreview",
      "visibility": "public"
    }
  },
  "postStartCommand": "bash /workspaces/servidor/start_nls.sh",
  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python"]
    }
  },
  "remoteUser": "vscode"
}
